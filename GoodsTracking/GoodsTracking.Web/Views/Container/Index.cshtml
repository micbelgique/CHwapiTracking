@model GoodsTracking.Web.ViewModels.ContainerViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("AddContainer", "Container", FormMethod.Post, new { @class = "form-signin", @id = "addContainerForm" }))
{
    <div class="row">
        <div class="col-md-6">
            @Html.LabelFor(model => model.Identifier, "Identifiant (obligatoire)");
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Identifier, new { @required = "required", @autofocus = "autofocus", @class = "form-control" })
        </div>
    </div>
    <br />

    <div class="row">
        <div class="col-md-6">
            @Html.LabelFor(model => model.Description, "Description (obligatoire)");
        </div>
        <div class="col-md-6">
            @Html.TextBoxFor(m => m.Description, new { @required = "required", @autofocus = "autofocus", @class = "form-control" })
        </div>
    </div>

    <div class="row rowSpacer">
        <div class="col-md-4 col-md-offset-6">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Ajouter le contenant</button>
        </div>
    </div>
}

@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            /*
             * Deactivate enter on form
             */
            $("#addContainerForm").keypress(function (event) {
                if (event.which == '13') {
                    event.preventDefault();
                }
            });
        });
    </script>
}
