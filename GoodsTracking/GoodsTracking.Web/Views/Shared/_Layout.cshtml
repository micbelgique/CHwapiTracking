<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GoodsTracking</title>
    @Styles.Render("~/content/css")
    <meta name="description" content="GoodsTracking" />
</head>
@{
    string activeController = @ViewContext.RouteData.Values["controller"].ToString();
}
<body>
    <div class="container-fluid">
        <div class="row vertical-align">
            <div class="col-md-4">
                <Img src="~/Content/Images/logo_chwapi.png" class="img-responsive" alt="LOGO">
            </div>
            <div class="col-md-8">
                <h1 class="text-center">Gestion de suivi des objets</h1>
            </div>
        </div>
        <nav class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button class="navbar-toggle collapsed" aria-expanded="false" aria-controls="navbar" type="button" data-toggle="collapse" data-target="#navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="@Url.Action("Index", "Home")">Accueil</a>
                </div>

                <div class="collapse navbar-collapse" id="navbar">
                    <ul class="nav navbar-nav">
                        <li class=@(activeController == "Tracker" ? "active" : string.Empty)>@Html.ActionLink("Ajouter un portique", "Index", "Tracker")</li>
                        <li class=@(activeController == "Container" ? "active" : string.Empty)>@Html.ActionLink("Ajouter un contenant", "Index", "Container")</li>
                        <li class=@(activeController == "Item" ? "active" : string.Empty)>@Html.ActionLink("Ajouter un item", "Index", "Item")</li>
                        <li class=@(activeController == "Active" ? "active" : string.Empty)>@Html.ActionLink("Activer la traçabilité d'un colis", "Index", "Active")</li>
                        <li class=@(activeController == "StopTracking" ? "active" : string.Empty)>@Html.ActionLink("Stopper la traçabilité d'un colis", "Index", "StopTracking")</li>
                        <li class=@(activeController == "Search" ? "active" : string.Empty)>@Html.ActionLink("Où se trouve mon colis?", "Index", "Search")</li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </nav>

        <div class="container">
            @RenderBody()
        </div>
    </div> <!-- /container -->
</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</html>
