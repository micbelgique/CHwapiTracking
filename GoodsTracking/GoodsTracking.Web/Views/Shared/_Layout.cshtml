<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GoodsTracking</title>
    @Styles.Render("~/content/css")

    <meta name="description" content="GoodsTracking" />


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
</head>
    @{
        string activeController = @ViewContext.RouteData.Values["controller"].ToString();
    }

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <Img src="~/Content/Images/logo_chwapi.png" class="img-responsive" alt="LOGO">
            </div>
            <div class="col-md-8">
                <h1 class="text-center">Nouvelle Application</h1>
            </div>
        </div>
        <nav class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button class="navbar-toggle collapsed" aria-expanded="false" aria-controls="navbar" type="button" data-toggle="collapse" data-target="#navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <div class="collapse navbar-collapse" id="navbar">
                    <ul class="nav navbar-nav">
                        <li class=@(activeController == "Home" ? "active" : string.Empty)>@Html.ActionLink("Activer la traçabilité d'un colis", "Index", "Home")</li>
                        <li class=@(activeController == "StopTracking" ? "active" : string.Empty)>@Html.ActionLink("Stopper la traçabilité d'un colis", "Index", "StopTracking")</li>
                        <li class=@(activeController == "Search" ? "active" : string.Empty)>@Html.ActionLink("Où se trouve mon colis?", "Index", "Search")</li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </nav>

        @RenderBody()
    </div> <!-- /container -->
</body>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
<link href="~/content/bootstrap.min.css" rel="stylesheet">

<link href="~/content/chwapi.css" rel="stylesheet">


</html>
